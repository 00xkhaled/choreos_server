<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app version="3.0">

    <!-- WelcomeFile -->
    <welcome-file-list>
        <welcome-fie>Controller</welcome-fie>
    </welcome-file-list>

    <!-- Login Servlet for Controller Servlet Access -->
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>java.hsos.cho.srv.boundary.servlets.Login</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- Control Servlet to update the States -->
    <servlet>
        <servlet-name>controlServlet</servlet-name>
        <servlet-class>java.hsos.cho.srv.boundary.servlets.Controller</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>controlServlet</servlet-name>
        <url-pattern>/control</url-pattern>
    </servlet-mapping>

    <!-- Ticket Servlet for updating Ticket Date and Ticket-Url -->
    <servlet>
        <servlet-name>settingServlet</servlet-name>
        <servlet-class>java.hsos.cho.srv.boundary.servlets.Setting</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>settingServlet</servlet-name>
        <url-pattern>/settings</url-pattern>
    </servlet-mapping>

    <!-- Default: ControlServlet -->
    <servlet>
        <servlet-name>defaultDispatchServlet</servlet-name>
        <servlet-class>java.hsos.cho.srv.boundary.servlets.DefaultDispatch</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>defaultDispatchServlet</servlet-name>
        <url-pattern></url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>60</session-timeout>
    </session-config>

</web-app>